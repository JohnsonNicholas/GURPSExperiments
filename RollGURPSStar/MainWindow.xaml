<Window x:Class="RollGURPSStar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate a Star" Height="522" Width="770">
    <Grid>
        <Button x:Name="btnGenerate" Content="Generate a Star!" Height="32" VerticalAlignment="Top" Margin="10,10,647,0" Click="btnGenerate_Click"/>
        <Label Content="Mass Upper Limit" Margin="115,10,-115,-10" />
        <TextBox x:Name="txtStarMassUL" Text="2" Margin="220,14,507,449" RenderTransformOrigin="0.725,1.81" />
        <Label Content="solar masses" Margin="260,10,-260,-10" />

        <Label Content="Set Age" Margin="355,10,-355,-10" />
        <TextBox x:Name="txtStarAge" Text="0"  Margin="410,14,322,449" RenderTransformOrigin="0.725,1.81" />
        <Label Content="GYa" Margin="445,10,-445,-10" />
        
        <Label Content="Mass Lower Limit" Margin="522,10,-522,-10" />
        <TextBox x:Name="txtStarMassLL" Text=".1"  Margin="634,14,93,449" RenderTransformOrigin="0.725,1.81" />
        <Label Content="solar masses" Margin="674,10,-674,-10" />

        <TextBox x:Name="txtStarDetails" Margin="10,64,10,10"/>
    </Grid>
</Window>
